@model BankTransaction.Models.Transaction

@{
    ViewData["Title"] = "Details";
}



        <div>
            <h1>Details</h1>
            <hr />


            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.AccountNumber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AccountNumber)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BeneficiaryName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BeneficiaryName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BankName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BankName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SWIFFTCode)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SWIFFTCode)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Amount)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Amount)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Date)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Date)
                </dd>
            </dl>
        </div>
        <div>

            <div class="row">

                <div class="col-md-2">

                    <div class="form-group">
                        <a asp-action="AddorEdit" class="btn btn-primary w-100" asp-route-id="@Model?.TransactionId">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                    </div>
                </div>
                <div class="col-md-2">
                    <div>
                        <a asp-action="index" class="btn btn-secondary w-100">
                            View All Accounts
                        </a>
                    </div>
                </div>

            </div>
        </div>

